<pu:WindowX x:Class="AuroraMinecarftLauncher.MainWindow"
        xmlns:pu="clr-namespace:Panuon.UI.Silver;assembly=Panuon.UI.Silver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Aurora Minecraft Launcher" Height="450" Width="800">
    <Grid Margin="0,0,-3,2">

        <TabControl TabStripPlacement="Left" HorizontalAlignment="Left" Height="436" Margin="5,0,0,0" VerticalAlignment="Center" Width="790" RenderTransformOrigin="0.432,0.488">
            <TabItem Header="启动" Height="70" Width="150">
                <Grid Margin="0,-9,0,0" Width="637">

                    <ComboBox HorizontalAlignment="Left" Height="30" Margin="103,376,0,0" VerticalAlignment="Top" Width="163" x:Name="version" DisplayMemberPath="Id" SelectionChanged="ComboBox_SelectionChanged" RenderTransformOrigin="0.506,0.575"/>
                    <Label Content="选择版本" HorizontalAlignment="Left" Height="25" Margin="106,349,0,0" VerticalAlignment="Top" Width="68" RenderTransformOrigin="0.115,0.899"/>
                    <TabControl HorizontalAlignment="Left" Height="313" Margin="48,35,0,0" VerticalAlignment="Top" Width="268">
                        <TabItem Header="微软登录">
                            <Grid Margin="0,0,13,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="35*"/>
                                    <ColumnDefinition Width="22*"/>
                                </Grid.ColumnDefinitions>

                                <Button Content="启动游戏" HorizontalAlignment="Left" Height="77" Margin="49,209,0,0" VerticalAlignment="Top" Width="161" Click="ZB_Start" Grid.ColumnSpan="2"/>
                                <Button Content="登录Microsoft账户" HorizontalAlignment="Left" Height="30" Margin="50,169,0,0" VerticalAlignment="Top" Width="160" Click="Button_Click_1" Grid.ColumnSpan="2"/>
                                <TextBlock Grid.ColumnSpan="2" Block.TextAlignment="Center" HorizontalAlignment="Left" Height="27" Margin="57,133,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="145" x:Name="userName"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="离线登录" RenderTransformOrigin="0.576,0.429">
                            <Grid RenderTransformOrigin="0.5,0.5" Margin="0,0,-4,0" Height="332">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="25*"/>
                                    <ColumnDefinition Width="31*"/>
                                    <ColumnDefinition Width="118*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform ScaleY="1"/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Grid.RenderTransform>
                                <TextBox HorizontalAlignment="Left" Height="32" Margin="21,155,0,0" TextWrapping="Wrap" Text="Player" VerticalAlignment="Top" Width="148" x:Name="IDTextbox"  TextChanged="IDT" RenderTransformOrigin="0.496,0.653" Grid.ColumnSpan="2" Grid.Column="1"/>
                                <Image Source="pack://application:,,,/img/Steve.jpg" Height="110" Width="110" Margin="39,23,84,199" Grid.Column="1" Grid.ColumnSpan="2"/>
                                <Button Content="启动游戏" HorizontalAlignment="Left" Height="77" Margin="7,200,0,0" VerticalAlignment="Top" Width="176" Click="Button_Click" Grid.ColumnSpan="2" Grid.Column="1"/>
                            </Grid>
                        </TabItem>
                        <TabItem Header="第三方登录">
                            <TabControl>
                                <TabItem Header="LittleSkin" Width="120">
                                    <Grid>
                                        <TextBox x:Name="LEamil" Text="" Margin="75,34,13,194" Height="25" Width="180" TextChanged="LEamil_TextChanged"/>
                                        <TextBox x:Name="LPassword" Text="" Margin="74,78,14,150" Height="25" Width="180" TextChanged="LPassword_TextChanged"/>
                                        <Label Content="邮箱：" HorizontalAlignment="Left" Height="25" Margin="16,34,0,0" VerticalAlignment="Top" Width="50"/>
                                        <Label Content="密码：" HorizontalAlignment="Left" Height="25" Margin="14,78,0,0" VerticalAlignment="Top" Width="50"/>
                                        <Button Content="启动游戏" HorizontalAlignment="Left" Height="77" Margin="48,178,0,0" VerticalAlignment="Top" Width="161" Click="LStart"/>
                                    </Grid>
                                </TabItem>
                                <TabItem Header="统一通行证" Width="120">
                                    <Grid>
                                        <Label Content="邮箱：" HorizontalAlignment="Left" Height="25" Margin="17,52,0,0" VerticalAlignment="Top" Width="50"/>
                                        <Label Content="密码：" HorizontalAlignment="Left" Height="25" Margin="15,86,0,0" VerticalAlignment="Top" Width="50"/>
                                        <TextBox x:Name="TEamil" Text="" Margin="79,52,9,176" Height="25" Width="180" TextChanged="TEamil_TextChanged"/>
                                        <TextBox x:Name="TPassword" Text="" Margin="78,87,10,141" Height="25" Width="180" TextChanged="TPassword_TextChanged"/>
                                        <TextBox x:Name="ServerID" Text="" Margin="78,18,10,210" Height="25" Width="180" TextChanged="ServerID_TextChanged"/>
                                        <Label Content="服务器ID：" HorizontalAlignment="Left" Height="25" Margin="12,19,0,0" VerticalAlignment="Top" Width="75"/>
                                        <Button Content="启动游戏" HorizontalAlignment="Left" Height="77" Margin="48,178,0,0" VerticalAlignment="Top" Width="161" Click="TStart"/>
                                    </Grid>
                                </TabItem>

                            </TabControl>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="下载" Height="70" Width="150">
                <Grid Width="636" Margin="0,-4,0,-4">
                    <Expander HorizontalAlignment="Left" Height="69" Header="Minecarft" Margin="45,18,0,0" VerticalAlignment="Top" Width="541">
                        <ListBox x:Name="DL" HorizontalAlignment="Left" Height="290" Margin="-6,0,0,0" VerticalAlignment="Top" Width="541" SelectionChanged="DL_SelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="{Binding Id}" FontWeight="Bold" FontSize="14"/>
                                            <TextBlock>
                                                <Run Text="发布时间："/>
                                                <Run Text="{Binding ReleaseTime}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Expander>
                    <Button Content="安装此版本" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="44" Width="118" Margin="4,0,0,26" Click="Button_Click_3"/>
                    <Button Margin="149,374,0,26" Content="刷新版本列表" HorizontalAlignment="Left" Click="Button_Click_4" Width="107"/>
                    <ProgressBar x:Name="jdt" Margin="274,374,10,26" ValueChanged="jdt_ValueChanged"/>
                </Grid>
            </TabItem>
            <TabItem Header="设置" Height="70" Width="150">
                <Grid Margin="0,-8,0,8">
                    <Label Content="选择您的Java" HorizontalAlignment="Left" Height="25" Margin="29,207,0,0" VerticalAlignment="Top" Width="93"/>
                    <Label Content="设置最大内存(单位：MB)" HorizontalAlignment="Left" Height="25" Margin="26,157,0,0" VerticalAlignment="Top" Width="168"/>
                    <ComboBox HorizontalAlignment="Left" Height="28" Margin="32,233,0,0" VerticalAlignment="Top" Width="173" x:Name="java" SelectionChanged="javaCombo_SelectionChanged"/>
                    <TextBox HorizontalAlignment="Left" Height="25" Margin="26,183,0,0" TextWrapping="Wrap" Text="1024" VerticalAlignment="Top" Width="169" x:Name="MemoryTextbox" TextChanged="MemoryTextbox_TextChanged"/>
                    <TextBlock HorizontalAlignment="Left" Height="39" Margin="19,120,0,0" TextWrapping="Wrap" Text="基础设置 &#13; ——————————————" VerticalAlignment="Top" Width="267"/>
                </Grid>
            </TabItem>
            <TabItem Header="关于" Height="70" Width="150">
                <Grid>
                    <TextBlock HorizontalAlignment="Left" Height="402" Margin="25,22,0,0" TextWrapping="Wrap" Text="Aurora Minecarft Launcher &#13; 软件以 GPLv3.0 免费开源 &#13; &#13; GitHub项目链接： &#13; https://github.com/Aurora-Studio-Team/Aurora-Minecarft-Launcher-AMCL &#13; &#13; 相关链接： &#13; Aurora Studio：https://aurora.thzstudent.top/ &#13; THZ的博客：https://thzstudent.top/&#13; &#13; Copyright(c) Aurora Studio. All rights reserved." VerticalAlignment="Top" Width="587"/>

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</pu:WindowX>