<pu:WindowX x:Class="AuroraMinecarftLauncher.MainWindow"
        xmlns:pu="clr-namespace:Panuon.UI.Silver;assembly=Panuon.UI.Silver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Aurora Minecraft Launcher" Height="450" Width="800">
    <Grid Margin="0,0,-3,2">

        <TabControl TabStripPlacement="Left" HorizontalAlignment="Left" Height="420" Margin="5,0,0,0" VerticalAlignment="Center" Width="800" RenderTransformOrigin="0.432,0.488" Grid.ColumnSpan="2">
            <TabItem Header="启动" Height="70" Width="150">
                <Grid Margin="0,-8,0,8">
                    <Button Content="离线登录" HorizontalAlignment="Left" Height="28" Margin="510,44,0,0" VerticalAlignment="Top" Width="60" Click="Button_Click_1" x:Name="LiXian"/>
                    <Button Content="启动游戏" HorizontalAlignment="Left" Height="87" Margin="380,318,0,0" VerticalAlignment="Top" Width="224" Click="Button_Click"/>
                    <ComboBox HorizontalAlignment="Left" Height="30" Margin="381,277,0,0" VerticalAlignment="Top" Width="224" x:Name="version" DisplayMemberPath="Id" SelectionChanged="ComboBox_SelectionChanged"/>
                    <Label Content="选择版本" HorizontalAlignment="Left" Height="25" Margin="379,252,0,0" VerticalAlignment="Top" Width="68"/>
                    <ContentControl x:Name="LoginControl" Content="" HorizontalAlignment="Left" Height="150" Margin="414,91,0,0" VerticalAlignment="Top" Width="150"/>
                    <Button Content="微软登录" HorizontalAlignment="Left" Height="28" Margin="407,44,0,0" VerticalAlignment="Top" Width="60" RenderTransformOrigin="1.545,0.331" Click="ButtonBase_OnClick"/>
                </Grid>
            </TabItem>
            <TabItem Header="下载" Height="70" Width="150">
                <Grid Width="636" Margin="0,0,0,-8">
                    <Expander HorizontalAlignment="Left" Height="30" Header="模组列表" Margin="22,2,0,0" VerticalAlignment="Top" Width="595">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="225*"/>
                                <ColumnDefinition Width="364*"/>
                            </Grid.ColumnDefinitions>
                            <ListBox x:Name="dList" d:ItemsSource="{d:SampleData ItemCount=5}" Grid.ColumnSpan="2">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <StackPanel Orientation="Vertical">
                                                <TextBlock Text="{Binding Id}" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock><Run Text="发布时间："/><Run Text=" "/><Run Text="{Binding ReleaseTime}"/></TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <Button Content="安装此版本" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="40" Width="113" Margin="103,0,0,-380" Click="Button_Click_3" RenderTransformOrigin="0.483,-0.625"/>
                            <Button Margin="-17,340,0,-380" Content="刷新版本列表" HorizontalAlignment="Left" Click="Button_Click_4" RenderTransformOrigin="4.262,-3.835" Height="40" Width="105"/>
                            <ProgressBar x:Name="jdt" Margin="1,342,-13,-379" Grid.Column="1"/>
                        </Grid>
                    </Expander>

                </Grid>
            </TabItem>
            <TabItem Header="联机" Height="70" Width="150">
                <Grid Margin="-1,-8,1,8">
                    <TextBlock HorizontalAlignment="Left" Height="62" Margin="150,199,0,0" TextWrapping="Wrap" Text="敬请期待！" VerticalAlignment="Top" Width="308"/>

                </Grid>
            </TabItem>
            <TabItem Header="设置" Height="70" Width="150">
                <Grid Margin="0,-8,0,8">
                    <Label Content="选择您的Java" HorizontalAlignment="Left" Height="25" Margin="29,207,0,0" VerticalAlignment="Top" Width="93"/>
                    <Label Content="设置最大内存(单位：MB)" HorizontalAlignment="Left" Height="25" Margin="26,157,0,0" VerticalAlignment="Top" Width="168"/>
                    <ComboBox HorizontalAlignment="Left" Height="28" Margin="32,233,0,0" VerticalAlignment="Top" Width="173" x:Name="java" SelectionChanged="javaCombo_SelectionChanged"/>
                    <TextBox HorizontalAlignment="Left" Height="25" Margin="26,183,0,0" TextWrapping="Wrap" Text="1024" VerticalAlignment="Top" Width="169" x:Name="MemoryTextbox" TextChanged="MemoryTextbox_TextChanged"/>
                    <TextBlock HorizontalAlignment="Left" Height="39" Margin="19,120,0,0" TextWrapping="Wrap" Text="基础设置 &#13; ——————————————" VerticalAlignment="Top" Width="267"/>
                </Grid>
            </TabItem>
            <TabItem Header="关于" Height="70" Width="150">
                <Grid>
                    <TextBlock HorizontalAlignment="Left" Height="402" Margin="25,22,0,0" TextWrapping="Wrap" Text="Aurora Minecarft Launcher &#13; 软件以 GPLv3.0 免费开源 &#13; &#13; GitHub项目链接： &#13; https://github.com/Aurora-Studio-Team/Aurora-Minecarft-Launcher-AMCL &#13; &#13; 相关链接： &#13; Aurora Studio：https://aurora.thzstudent.top/ &#13; THZ的博客：https://thzstudent.top/&#13; &#13; Copyright(c) Aurora Studio. All rights reserved." VerticalAlignment="Top" Width="587"/>

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</pu:WindowX>